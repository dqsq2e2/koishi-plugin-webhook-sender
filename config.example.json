{
  "webhooks": [
    {
      "command": "transfer",
      "description": "转账操作",
      "url": "https://api.example.com/transfer",
      "method": "POST",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer your-api-token",
        "X-User-QQ": "{QQ}",
        "X-User-Token": "{token}",
        "X-Reason": "{reason}"
      },
      "body": {
        "from_user": "{QQ}",
        "to_user": "{target}",
        "amount": "{amount}",
        "reason": "{reason}"
      },
      "defaultParameters": [
        {
          "name": "target",
          "description": "转账目标用户ID",
          "required": true
        },
        {
          "name": "amount",
          "description": "转账金额",
          "required": true
        },
        {
          "name": "reason",
          "description": "转账原因",
          "required": false,
          "defaultValue": "无备注"
        }
      ],
      "inputParameters": [
        {
          "name": "token",
          "option": "t",
          "description": "用户令牌",
          "required": false
        }
      ],
      "platform": "onebot",
      "botId": "123456789",
      "successCodes": [200, 201],
      "successMessage": "转账成功！\n转账给：{recipient.name}\n金额：{amount}元\n余额：{balance}元",
      "errorMessage": "转账失败：{error}"
    },
    {
      "command": "query-user",
      "description": "查询用户信息",
      "url": "https://api.example.com/user/{QQ}/info",
      "method": "GET",
      "body": {
        "target_user": "{parameter}",
        "include_details": "true"
      },
      "defaultParameters": [
        {
          "name": "parameter",
          "description": "要查询的用户ID",
          "required": false,
          "defaultValue": "{QQ}"
        }
      ],
      "platform": "kook",
      "successCodes": [200],
      "successMessage": "查询成功！\n用户：{user.name}\n等级：{user.level}\n积分：{user.points}",
      "errorMessage": "查询失败：{error}"
    },
    {
      "command": "send-gift",
      "description": "发送礼物",
      "url": "https://api.example.com/gift/send",
      "method": "POST",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "from": "{QQ}",
        "to": "{recipient}",
        "gift_type": "{gift}",
        "quantity": "{count}",
        "message": "{message}"
      },
      "defaultParameters": [
        {
          "name": "recipient",
          "description": "礼物接收者",
          "required": true
        },
        {
          "name": "gift",
          "description": "礼物类型",
          "required": false,
          "defaultValue": "flower"
        },
        {
          "name": "count",
          "description": "数量",
          "required": false,
          "defaultValue": "1"
        }
      ],
      "inputParameters": [
        {
          "name": "message",
          "option": "m",
          "description": "赠送留言",
          "required": false,
          "defaultValue": "送你一份小礼物"
        }
      ],
      "botId": "987654321",
      "successCodes": [200, 202],
      "successMessage": "礼物发送成功！\n收件人：{recipient_name}\n礼物：{gift} x{count}",
      "errorMessage": "发送失败：{error}"
    },
    {
      "command": "sign",
      "description": "每日签到",
      "url": "https://api.example.com/daily-sign",
      "method": "POST",
      "body": {
        "user_id": "{QQ}",
        "action": "daily_sign",
        "location": "{parameter}"
      },
      "defaultParameters": [
        {
          "name": "parameter",
          "description": "签到地点",
          "required": false,
          "defaultValue": "默认地点"
        }
      ],
      "platform": "telegram",
      "botId": "1122334455",
      "successCodes": [200],
      "successMessage": "签到成功！\n地点：{parameter}\n连续签到：{days}天\n获得积分：{points}",
      "errorMessage": "签到失败：{error}"
    },
    {
      "command": "calc",
      "description": "简单计算器",
      "url": "https://api.example.com/calculate",
      "method": "POST",
      "body": {
        "expression": "{expr}",
        "user": "{QQ}"
      },
      "defaultParameters": [
        {
          "name": "expr",
          "description": "计算表达式",
          "required": true
        }
      ],
      "successCodes": [200],
      "successMessage": "计算结果：{expr} = {result}",
      "errorMessage": "计算失败：{error}"
    }
  ],
  "globalTimeout": 5000,
  "enableLogging": true
} 